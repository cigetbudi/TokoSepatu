
@model TokoSepatu.Models.Pembeli

<form method="post" id="pembeliForm" asp-action="Create">

    <div class="border p-3">
        @*validasi model*@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3 text-center">Tambah Pembeli</h2>
        </div>
