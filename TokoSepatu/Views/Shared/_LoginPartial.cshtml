@inject Microsoft.AspNetCore.Identity.SignInManager<Microsoft.AspNetCore.Identity.IdentityUser> signInManager
@*kalau login, tombol daftar dan login tidak tampak dan diganti hello*@

@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="Keluar" asp-controller="Akun">
        <ul class="nav navbar-nav">
            <li class="text-black nav-link">Halo, @User.Identity.Name! </li>
            <li><a class="text-black nav-link" href="javascript:document.getElementById('logoutForm').submit()">Keluar</a></li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            @*@Html.ActionLink("Daftar", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })*@
            <a class="nav-link text-black" id="daftarLink" asp-controller="Akun" asp-action="Daftar">Daftar</a>
        </li>
        <li>
            <a class="nav-link text-black" id="loginLink" asp-controller="Akun" asp-action="Login">Masuk</a>
            @*@Html.ActionLink("Masuk", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })*@
        </li>
    </ul>
}

